---
import Layout from '../layouts/Layout.astro';
import { Card } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { ExternalLink, ArrowRight, Gauge, Target } from "lucide-react";

const projects = [
  {
    title: "Next-Gen VR Controller",
    image: "https://images.unsplash.com/photo-1622979135225-d2ba269cf1ac?q=80&w=2070&auto=format&fit=crop",
    description: "Revolutionary haptic feedback system with precision motion tracking",
    tags: ["Hardware Design", "VR", "Manufacturing"],
    metrics: [
      "30% improved battery life",
      "Sub-millisecond latency",
      "95% yield rate"
    ]
  },
  {
    title: "Smart Home Hub",
    image: "https://images.unsplash.com/photo-1558002038-1055907df827?q=80&w=2070&auto=format&fit=crop",
    description: "Integrated IoT control center with advanced thermal management",
    tags: ["Product Design", "IoT", "Thermal Design"],
    metrics: [
      "Passive cooling system",
      "5-year lifespan",
      "IP67 rated"
    ]
  },
  {
    title: "Precision Camera Module",
    image: "https://images.unsplash.com/photo-1616165415772-f5b95c3ae135?q=80&w=2070&auto=format&fit=crop",
    description: "High-performance optical system for industrial applications",
    tags: ["Optics", "Precision Engineering"],
    metrics: [
      "0.5Î¼m positioning accuracy",
      "Industrial temperature range",
      "Auto-calibration system"
    ]
  }
];
---

<Layout title="Portfolio - Michelle Sentevski">
  <div class="relative">
    <!-- Subtle gradient background with Stripe-inspired design -->
    <div class="absolute inset-0 bg-gradient-to-b from-slate-50/50 to-slate-100/50 dark:from-[#2C3D4F]/80 dark:to-[#2C3D4F]/95" />
    
    <!-- Content -->
    <div class="relative">
      <header class="mb-12">
        <h1 class="text-4xl font-semibold bg-gradient-to-r from-navy-500 to-navy-400 bg-clip-text text-transparent dark:from-slate-200 dark:to-slate-300 tracking-tight">
          Portfolio
        </h1>
        <p class="mt-4 text-slate-600 dark:text-slate-300 max-w-2xl">
          A showcase of innovative mechanical engineering projects that demonstrate my approach to solving complex design challenges.
        </p>
      </header>

      <div class="grid md:grid-cols-2 gap-8">
        {projects.map((project) => (
          <Card className="group relative overflow-hidden border-0 bg-white/70 dark:bg-[#2C3D4F]/70 backdrop-blur-xl hover:bg-white/80 dark:hover:bg-[#2C3D4F]/80 transition-all duration-300">
            <div class="absolute inset-0 bg-gradient-to-r from-navy-500/5 to-transparent dark:from-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
            
            <div class="relative">
              <!-- Image Container with Overlay -->
              <div class="relative h-64 overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent z-10" />
                <img 
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700 ease-out"
                />
                <!-- Tags Overlay -->
                <div class="absolute bottom-4 left-4 right-4 z-20 flex flex-wrap gap-2">
                  {project.tags.map((tag) => (
                    <Badge variant="secondary" className="bg-white/90 dark:bg-[#2C3D4F]/90 text-slate-700 dark:text-slate-200 backdrop-blur-sm">
                      {tag}
                    </Badge>
                  ))}
                </div>
              </div>

              <div class="p-6">
                <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-200 group-hover:text-navy-500 dark:group-hover:text-white transition-colors">
                  {project.title}
                </h2>
                <p class="mt-4 text-slate-600 dark:text-slate-300">
                  {project.description}
                </p>
                <div class="mt-6 space-y-2">
                  {project.metrics.map((metric) => (
                    <div class="flex items-center space-x-2 text-slate-600 dark:text-slate-300">
                      <Target className="w-4 h-4 text-navy-500 dark:text-slate-400" />
                      <span>{metric}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Smooth image zoom effect */
  .card img {
    transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Card hover lift effect */
  .card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .card:hover {
    transform: translateY(-2px);
  }
  
  /* Badge hover effect */
  .badge {
    transition: all 0.2s ease-in-out;
  }
  
  .badge:hover {
    transform: scale(1.05);
  }
</style>
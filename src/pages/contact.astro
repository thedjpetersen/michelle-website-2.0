---
import Layout from '../layouts/Layout.astro';
import { Card } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Button } from "@/components/ui/button";
import { Label } from "@/components/ui/label";
---

<Layout title="Contact - Michelle Sentevski">
  <div class="relative">
    <!-- Subtle gradient background -->
    <div class="absolute inset-0 bg-gradient-to-b from-slate-50/50 to-slate-100/50 dark:from-[#2C3D4F]/80 dark:to-[#2C3D4F]/95" />
    
    <!-- Content -->
    <div class="relative">
      <header class="mb-12">
        <h1 class="text-4xl font-semibold bg-gradient-to-r from-navy-500 to-navy-400 bg-clip-text text-transparent dark:from-slate-200 dark:to-slate-300 tracking-tight">
          Contact Me
        </h1>
        <p class="mt-4 text-slate-600 dark:text-slate-300 max-w-2xl">
          Let's discuss how I can help bring your product ideas to life.
        </p>
      </header>

      <Card className="relative overflow-hidden border-0 bg-white/70 dark:bg-[#2C3D4F]/70 backdrop-blur-xl p-8">
        <div class="absolute inset-0 bg-gradient-to-r from-navy-500/5 to-transparent dark:from-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
        
        <form class="relative space-y-6">
          <div class="space-y-2">
            <Label htmlFor="name" className="text-slate-700 dark:text-slate-300">Name</Label>
            <Input 
              id="name" 
              placeholder="Your name" 
              className="bg-white/50 dark:bg-slate-800/50 border-slate-200 dark:border-slate-700/50"
            />
          </div>
          
          <div class="space-y-2">
            <Label htmlFor="email" className="text-slate-700 dark:text-slate-300">Email</Label>
            <Input 
              id="email" 
              type="email" 
              placeholder="your.email@example.com" 
              className="bg-white/50 dark:bg-slate-800/50 border-slate-200 dark:border-slate-700/50"
            />
          </div>
          
          <div class="space-y-2">
            <Label htmlFor="message" className="text-slate-700 dark:text-slate-300">Message</Label>
            <Textarea 
              id="message" 
              placeholder="Tell me about your project..."
              className="min-h-[200px] bg-white/50 dark:bg-slate-800/50 border-slate-200 dark:border-slate-700/50"
            />
          </div>
          
          <Button type="submit" className="w-full bg-navy-500 hover:bg-navy-600 text-white dark:bg-slate-700/50 dark:hover:bg-slate-700/70">
            Send Message
          </Button>
        </form>
      </Card>
    </div>
  </div>
</Layout>
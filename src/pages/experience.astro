---
import Layout from '../layouts/Layout.astro';
import { Card } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Calendar, Building2, Briefcase } from 'lucide-react';

const experiences = [
  {
    role: "Head of Product Design Engineering",
    company: "Unison",
    period: "2022 - 2024",
    description: "I lead a small team of hardware engineers to build a VR headset that solves user retention by prioritizing comfort and portability. I did all things hardware related",
    skills: ["VR Hardware", "Team Leadership", "Product Design", "Hardware Engineering"],
    logo: '/logos/unison.svg'
  },
  {
    role: "Hardware Systems Engineer",
    company: "Niantic",
    period: "2022 - 2022",
    description: "Core MechE responsible for developing an AR headset to be used internally and externally by software and game developers.",
    skills: ["AR Hardware", "Mechanical Engineering", "Systems Design"],
    logo: '/logos/niantic.svg'
  },
  {
    role: "Product Design Engineer",
    company: "Meta",
    period: "2020 - 2022",
    description: "Member of the VR headset development team, launched Quest 2 and Quest 3.",
    skills: ["VR Hardware", "Product Development", "Mass Production"],
    logo: '/logos/meta.svg'
  },
  {
    role: "Product Design Engineer",
    company: "Shure",
    period: "2015 - 2020",
    description: "Responsible for implementing the constraints of industrial design concepts and electrical intent, creating a functional and manufacturable product from concept through mass production.",
    skills: ["Industrial Design", "Manufacturing", "Product Development", "DFM"],
    logo: '/logos/shure.svg'
  }
];
---

<Layout title="Experience - Michelle Sentevski">
  <div class="relative min-h-screen">
    <!-- Decorative background elements -->
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-navy-500/5 via-transparent to-transparent dark:from-slate-400/5"></div>
    <div class="absolute top-20 right-20 w-72 h-72 bg-navy-500/5 dark:bg-slate-400/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-20 w-96 h-96 bg-navy-500/5 dark:bg-slate-400/5 rounded-full blur-3xl"></div>
    
    <!-- Content -->
    <div class="relative max-w-5xl mx-auto px-6 py-16 sm:py-24">
      <header class="mb-16 md:mb-24">
        <div class="inline-flex items-center space-x-2 text-sm text-navy-500/70 dark:text-slate-400/70 mb-4">
          <Briefcase className="w-4 h-4" />
          <span>Work Experience</span>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold bg-gradient-to-r from-navy-500 to-navy-400 bg-clip-text dark:from-slate-200 dark:to-slate-300 tracking-tight leading-tight max-w-3xl">
          A decade of building the future
        </h1>
        <p class="mt-6 text-lg text-slate-600 dark:text-slate-300 max-w-2xl leading-relaxed">
          Specializing in VR/AR hardware and product design engineering, I've helped shape the next generation of immersive technologies at industry-leading companies.
        </p>
      </header>

      <div class="divide-y divide-slate-200/60 dark:divide-slate-700/60">
        {experiences.map((exp, index) => (
          <div class="group py-12 first:pt-0 last:pb-0">            
            <div class="relative">
              <div class="flex flex-col md:flex-row md:items-start justify-between gap-6 mb-8">
                <div class="space-y-4">
                  <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 rounded-lg bg-slate-100 dark:bg-slate-800/50 p-2 flex items-center justify-center group-hover:bg-slate-50 dark:group-hover:bg-slate-800/80 transition-colors duration-500">
                      <img src={exp.logo} alt={exp.company} class="w-full h-full object-contain opacity-90 group-hover:opacity-100 transition-opacity" />
                    </div>
                    <div>
                      <h2 class="text-lg font-medium text-slate-600 dark:text-slate-300 group-hover:text-navy-500/90 dark:group-hover:text-white/90 transition-colors">
                        {exp.role}
                      </h2>
                      <div class="flex items-center mt-1 text-slate-500 dark:text-slate-400">
                        <Building2 className="w-3.5 h-3.5 mr-1.5" />
                        <span class="font-medium">{exp.company}</span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="flex items-center text-slate-500 dark:text-slate-400">
                  <Calendar className="w-3.5 h-3.5 mr-1.5" />
                  <span class="font-medium">{exp.period}</span>
                </div>
              </div>

              <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-8 max-w-3xl">
                {exp.description}
              </p>

              <div class="flex flex-wrap gap-2">
                {exp.skills.map((skill) => (
                  <Badge variant="secondary" className="bg-slate-100/80 dark:bg-slate-800/50 text-slate-700 dark:text-slate-200 hover:bg-navy-50 dark:hover:bg-slate-800/80 transition-all duration-300 hover:scale-105">
                    {skill}
                  </Badge>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Smooth animations */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Enhanced hover effects */
  .badge {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .badge:hover {
    transform: scale(1.05);
  }

  /* Gradient text animation */
  h1 {
    background-size: 200% auto;
    animation: shine 8s linear infinite;
  }

  @keyframes shine {
    to {
      background-position: 200% center;
    }
  }
</style>
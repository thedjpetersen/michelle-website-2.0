---
import Layout from '../layouts/Layout.astro';
import { Card } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Calendar, Building2, ChevronRight } from 'lucide-react';

const experiences = [
  {
    role: "Head of Product Design Engineering",
    company: "Unison",
    period: "2022 - 2024",
    description: "I lead a small team of hardware engineers to build a VR headset that solves user retention by prioritizing comfort and portability. I did all things hardware related",
    skills: ["VR Hardware", "Team Leadership", "Product Design", "Hardware Engineering"]
  },
  {
    role: "Hardware Systems Engineer",
    company: "Niantic",
    period: "2022 - 2022",
    description: "Core MechE responsible for developing an AR headset to be used internally and externally by software and game developers.",
    skills: ["AR Hardware", "Mechanical Engineering", "Systems Design"]
  },
  {
    role: "Product Design Engineer",
    company: "Meta",
    period: "2020 - 2022",
    description: "Member of the VR headset development team, launched Quest 2 and Quest 3.",
    skills: ["VR Hardware", "Product Development", "Mass Production"]
  },
  {
    role: "Product Design Engineer",
    company: "Shure",
    period: "2015 - 2020",
    description: "Responsible for implementing the constraints of industrial design concepts and electrical intent, creating a functional and manufacturable product from concept through mass production.",
    skills: ["Industrial Design", "Manufacturing", "Product Development", "DFM"]
  }
];
---

<Layout title="Experience - Michelle Sentevski">
  <div class="relative">
    <!-- Subtle gradient background with Stripe-inspired design -->
    <div class="absolute inset-0 bg-gradient-to-b from-slate-50/50 to-slate-100/50 dark:from-[#2C3D4F]/80 dark:to-[#2C3D4F]/95" />
    
    <!-- Content -->
    <div class="relative">
      <header class="mb-12">
        <h1 class="text-4xl font-semibold bg-gradient-to-r from-navy-500 to-navy-400 bg-clip-text text-transparent dark:from-slate-200 dark:to-slate-300 tracking-tight">
          Professional Experience
        </h1>
        <p class="mt-4 text-slate-600 dark:text-slate-300 max-w-2xl">
          A decade of expertise in VR/AR hardware and product design engineering, specializing in bringing innovative concepts to mass production.
        </p>
      </header>

      <div class="space-y-6">
        {experiences.map((exp) => (
          <Card className="group relative overflow-hidden border-0 bg-white/70 dark:bg-[#2C3D4F]/70 backdrop-blur-xl hover:bg-white/80 dark:hover:bg-[#2C3D4F]/80 transition-all duration-300">
            <div class="absolute inset-0 bg-gradient-to-r from-navy-500/5 to-transparent dark:from-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
            
            <div class="relative p-6 md:p-8">
              <div class="flex flex-col md:flex-row justify-between mb-4">
                <div class="space-y-2">
                  <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-200 group-hover:text-navy-500 dark:group-hover:text-white transition-colors">
                    {exp.role}
                  </h2>
                  <div class="flex items-center space-x-2 text-slate-600 dark:text-slate-300">
                    <Building2 className="w-4 h-4" />
                    <span class="font-medium">{exp.company}</span>
                  </div>
                </div>
                <div class="flex items-center mt-2 md:mt-0 text-slate-500 dark:text-slate-400">
                  <Calendar className="w-4 h-4 mr-2" />
                  <span>{exp.period}</span>
                </div>
              </div>

              <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-6">
                {exp.description}
              </p>

              <div class="flex flex-wrap gap-2">
                {exp.skills.map((skill) => (
                  <Badge variant="secondary" className="bg-slate-100 dark:bg-slate-700/30 text-slate-700 dark:text-slate-200 hover:bg-navy-50 dark:hover:bg-slate-700/50 transition-colors">
                    {skill}
                  </Badge>
                ))}
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Stripe-inspired card hover effect */
  .card {
    transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .card:hover {
    transform: translateY(-2px);
  }
  
  /* Smooth badge transitions */
  .badge {
    transition: all 0.2s ease-in-out;
  }
  
  .badge:hover {
    transform: scale(1.05);
  }
</style>